<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/operationField"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- поле знака операции -->
    <TextView
        android:id="@+id/operationField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/resultField"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- поле ввода чисел -->
    <EditText
        android:id="@+id/numberField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultField" />

    <LinearLayout
        android:id="@+id/firstButtonPanel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#5C1068"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberField">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="8"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="9"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondButtonPanel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#5C1068"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstButtonPanel">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="6"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdButtonPanel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#5C1068"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondButtonPanel">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="3"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forthButtonPanel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#5C1068"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdButtonPanel">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onNumberClick"
            android:text=","
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0101"
            android:onClick="onOperationClick"
            android:text="="
            android:textColor="#000000"
            android:textSize="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthButtonPanel"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numberField">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="onOperationClick"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="onOperationClick"
            android:text="-"
            android:textColor="#000000"
            android:textSize="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="onOperationClick"
            android:text="/"
            android:textColor="#000000"
            android:textSize="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="onOperationClick"
            android:text="*"
            android:textColor="#000000"
            android:textSize="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="onOperationClick"
            android:text="^"
            android:textColor="#000000"
            android:textSize="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="onOperationClick"
            android:text="√"
            android:textColor="#000000"
            android:textSize="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="onOperationClick"
            android:text="1/x"
            android:textColor="#000000"
            android:textSize="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>